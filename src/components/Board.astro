<style>
	.board {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 10px;
		margin-bottom: 2rem;
	}

	.cell {
		width: 100px;
		height: 100px;
		border: 2px solid var(--border-color);
		border-radius: 10px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 3rem;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.cell:hover {
		background-color: rgba(52, 152, 219, 0.1);
	}

	.cell.x::before {
		content: "X";
		color: var(--primary-color);
	}

	.cell.circle::before {
		content: "O";
		color: var(--secondary-color);
	}

	@media (max-width: 480px) {
		.cell {
			width: 80px;
			height: 80px;
			font-size: 2.5rem;
		}
	}
</style>
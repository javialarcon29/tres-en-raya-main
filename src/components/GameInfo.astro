<div class="game-info">
	<div class="status"></div>
	<button id="restartButton">Reiniciar Juego</button>
</div>

<style>
	.game-info {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.status {
		font-size: 1.5rem;
		font-weight: bold;
		margin-bottom: 1rem;
	}

	#restartButton {
		background-color: var(--primary-color);
		color: white;
		border: none;
		padding: 10px 20px;
		font-size: 1rem;
		border-radius: 5px;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}

	#restartButton:hover {
		background-color: #2980b9;
	}
</style>